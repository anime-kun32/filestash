{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {}
    },
    "rules": {
        "indent": [2, 4],
        "quotes": [2, "double"],
        "object-curly-spacing": [2, "always"],
        "require-jsdoc": [0],
        "camelcase": [0],
        "max-len": ["error", 100],
        "prefer-promise-reject-errors": [0],
        "guard-for-in": [0],
        "new-cap": [0],
        "prefer-spread": [0],
        "max-len": [0],
        "no-invalid-this": [0],
        "prefer-rest-params": [0],
        "no-throw-literal": [1]
    }
}
